<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="page.main.title" remove="true" />
	<referenceBlock name="breadcrumbs">
			<action method="addCrumb">
                <argument name="crumbName" xsi:type="string">home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
              </argument>
            </action> 
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">account</argument>
                   <argument name="crumbInfo" xsi:type="array">
                      <item name="title" xsi:type="string" translate="true">My Account</item>
                      <item name="label" xsi:type="string" translate="true">My Account</item>
                  </argument>
            </action>
		</referenceBlock>
	<referenceBlock name="sales.order.history">
        <action method="setTemplate">
            <argument name="template" xsi:type="string">Panama_Order::order/history.phtml</argument>
        </action>
    </referenceBlock>
</page>