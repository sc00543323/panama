                                <p class="results-address"><?php echo $block->escapeHtml($item["address"]); ?></p>
                            <?php endif; ?>

                            <?php if ($item["city"]): ?>
                                <p class="results-phone">
                                    <?php
                                    echo $block->escapeHtml($item["city"]);
